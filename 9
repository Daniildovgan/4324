#include <iostream>

int main() {
    int number;
    int sum = 0;

    std::cout << "Введіть числа. Введіть 0, щоб завершити: ";

    while (true) {
        std::cin >> number;
        sum += number;

        if (number == 0) {
            break;
        }
    }

    std::cout << "Сума введених чисел: " << sum << std::endl;

    return 0;
}
