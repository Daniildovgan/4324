#include <iostream>

int main() {
    int sum = 0;
    int count = 0;

    for (int i = 1; i <= 1000; ++i) {
        sum += i;
        count++;
    }

    double average = static_cast<double>(sum) / count;

    std::cout << "Середнє арифметичне всіх цілих чисел від 1 до 1000: " << average << std::endl;

    return 0;
}
