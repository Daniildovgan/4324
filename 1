#include <iostream>

int main() {
    int a;
    std::cout << "Podaj liczbe a: ";
    std::cin >> a;

    if (a < 1 || a > 500) {
        std::cout << "Liczba a musi być z zakresu od 1 do 500." << std::endl;
        return 1; // Zakończ program z kodem błędu
    }

    int suma = 0;
    for (int i = a; i <= 500; ++i) {
        suma += i;
    }

    std::cout << "Suma liczb od " << a << " do 500 wynosi: " << suma << std::endl;

    return 0; // Zakończ program z kodem sukcesu
}
